<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/padding_bottom_4"
            android:paddingStart="@dimen/padding_start_4"
            android:paddingEnd="@dimen/padding_end_4"
            android:paddingTop="@dimen/padding_top_8"
            android:textColor="@color/colorCardTitle"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_start_16"
            android:paddingEnd="@dimen/padding_end_8"
            android:paddingStart="@dimen/padding_start_8"
            android:textColor="@color/colorCardDateAuth"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>
